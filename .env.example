# VelvetBot Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DISCORD CONFIGURATION (Required)
# ===========================================

# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Bot command prefix (default: !)
BOT_PREFIX=!

# ===========================================
# CHANNEL IDs (Get from Discord Developer Mode)
# ===========================================

# Channel for bot logs
LOG_CHANNEL_ID=0

# Channel for welcome messages
WELCOME_CHANNEL_ID=0

# Channel for stream notifications
STREAM_ALERTS_CHANNEL_ID=0

# Category ID for ticket channels
TICKETS_CATEGORY_ID=0

# Channel for announcements
ANNOUNCEMENTS_CHANNEL_ID=0

# Channel for moderation logs
MOD_LOG_CHANNEL_ID=0

# ===========================================
# ROLE IDs
# ===========================================

# Admin role
ADMIN_ROLE_ID=0

# Moderator role
MOD_ROLE_ID=0

# Member role (given on join)
MEMBER_ROLE_ID=0

# Client role
CLIENT_ROLE_ID=0

# Role to ping for stream notifications
STREAM_NOTIFY_ROLE_ID=0

# Level roles (optional)
LEVEL_5_ROLE_ID=0
LEVEL_10_ROLE_ID=0
LEVEL_25_ROLE_ID=0
LEVEL_50_ROLE_ID=0
LEVEL_100_ROLE_ID=0

# ===========================================
# TWITCH API (Optional - for stream alerts)
# Get from https://dev.twitch.tv/console
# ===========================================

TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_USERNAME=your_twitch_username

# ===========================================
# YOUTUBE API (Optional - for stream alerts)
# Get from https://console.cloud.google.com
# ===========================================

YOUTUBE_API_KEY=
YOUTUBE_CHANNEL_ID=

# ===========================================
# DATABASE (Optional - defaults to SQLite)
# ===========================================

# For SQLite (default):
DATABASE_URL=sqlite+aiosqlite:///velvetbot.db

# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/velvetbot

# ===========================================
# TIKTOK (Manual - no API available)
# ===========================================

# Your TikTok profile URL for announcements
TIKTOK_URL=https://tiktok.com/@yourusername
